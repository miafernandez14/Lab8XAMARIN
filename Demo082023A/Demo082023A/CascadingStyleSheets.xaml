<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo082023A.CascadingStyleSheets">

    <ContentPage.Resources>
        <StyleSheet Source="Assets/estilos.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <StackLayout Orientation="Vertical">
                <Label x:Name="title" Text="Formulario"></Label>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Entry Placeholder="Your Gmail"></Entry>
                <Entry Placeholder="Your Name"></Entry>
                <Entry Placeholder="Your password" ></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <CheckBox></CheckBox>
                <Label Text="from another device"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="giveup" Text="Cancelar"></Button>
                <Button x:Name="signup" Text="Registrarse"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>